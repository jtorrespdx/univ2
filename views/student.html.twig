<html>
<head>
    <title>University Registrar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>{{ student.getName }}</h1>

        {% if courses is not empty %}
            <p>Here are the courses for this student:</p>
            <ul>
                {% for course in courses %}
                    <li>{{ course.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Add a course to this student:</h4>

        <form action='/add_courses' method='post'>
            <input id="student_id" name="student_id" type="hidden" value="{{ student.getId }}">
            <label for="course_id">Select a course</label>
            <select id='course_id' name='course_id' type='text'>
              {% for course in all_courses %}
                <option value="{{ course.getId }}"> {{ course.getName }} </option>
              {% endfor %}
            </select>
            <button type='submit'>Add course</button>
        </form>

        <p><a href="/students/{{ student.getId }}/edit">Edit this student</a></p>

        <form action="/students/{{ student.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit" class="btn btn-danger">Delete this student</button>
        </form>

        <form action="/">
            <button type="submit" class="btn btn-default">Return Home</button>
        </form>
    </div>
</body>
</html>
